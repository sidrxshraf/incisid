  <script>
    /* -------- floating confetti hearts -------- */
    (function(){
      const c = document.getElementById('confetti');
      const COUNT = 40;
      for(let i=0;i<COUNT;i++){
        const h = document.createElement('div');
        h.className='heart';
        const left = Math.random()*100;
        const dur = 6 + Math.random()*6; // 6â€“12s
        const delay = Math.random()*-12; // negative so they are already spread
        h.style.left = left+'%';
        h.style.top = '-20px';
        h.style.animation = `floatDown ${dur}s linear infinite`;
        h.style.animationDelay = `${delay}s`;
        h.style.opacity = 0.5 + Math.random()*0.5;
        c.appendChild(h);
      }
    })();

    /* -------- gallery -------- */
    const images = [
      /* EDIT ME: replace with your own image URLs */
      'https://i.postimg.cc/N0CkLMWW/download.jpg',
      'https://i.postimg.cc/sxYWPDNf/image.jpg',
      'https://i.postimg.cc/21pwFGhb/IMG-8784.jpg',
      'https://i.postimg.cc/kXKh2QMK/download-3.jpg'
    ];
    const slides = document.getElementById('slides');
    if(images.length){
      images.forEach(url=>{
        const d = document.createElement('div');
        d.className='slide';
        d.style.backgroundImage = `url("${url}")`;
        slides.appendChild(d);
      });
    } else {
      slides.innerHTML = '<div class="slide" style="display:flex;align-items:center;justify-content:center;color:#888">add photos to images[]</div>';
    }
    let idx = 0;
    const prevBtn = document.getElementById('prev');
    const nextBtn = document.getElementById('next');
    const galleryEl = document.getElementById('gallery');
    function go(i){
      idx = (i+images.length)%images.length;
      slides.style.transform = `translateX(-${idx*100}%)`;
    }
    prevBtn.addEventListener('click',()=>go(idx-1));
    nextBtn.addEventListener('click',()=>go(idx+1));
    let auto = setInterval(()=>go(idx+1), 4000);
    galleryEl.addEventListener('mouseenter',()=>clearInterval(auto));
    galleryEl.addEventListener('mouseleave',()=>auto = setInterval(()=>go(idx+1), 4000));

    /* -------- open-when envelopes -------- */
    document.querySelectorAll('.envelope').forEach(card=>{
      card.addEventListener('click',()=>{
        const id = card.dataset.letter;
        const box = document.getElementById(`letter-${id}`);
        const isOpen = box.style.display==='block';
        document.querySelectorAll('.letter').forEach(l=>l.style.display='none');
        box.style.display = isOpen ? 'none' : 'block';
      });
    });

    /* -------- count-UP from 24 Sept 2020 -------- */
    const countup = document.getElementById('countup');
    function renderCountup(){
      const start = new Date('2025-07-06T00:00:00'); // EDIT ME if needed
      const now = new Date();
      let ms = now - start;
      const clamp = n => Math.max(0,n);

      const days = clamp(Math.floor(ms/86400000));
      ms %= 86400000;
      const hours = clamp(Math.floor(ms/3600000));
      ms %= 3600000;
      const mins = clamp(Math.floor(ms/60000));
      ms %= 60000;
      const secs = clamp(Math.floor(ms/1000));

      countup.innerHTML = `
        <div class="tile"><span class="num">${days}</span><span class="lbl">days</span></div>
        <div class="tile"><span class="num">${hours}</span><span class="lbl">hours</span></div>
        <div class="tile"><span class="num">${mins}</span><span class="lbl">mins</span></div>
        <div class="tile"><span class="num">${secs}</span><span class="lbl">secs</span></div>
      `;
    }
    renderCountup();
    setInterval(renderCountup, 1000);

    /* ------- secret modal ------- */
    const modal = document.getElementById('modal');
    document.getElementById('secret').addEventListener('click',()=>{modal.style.display='flex'});
    document.getElementById('closeModal').addEventListener('click',()=>{modal.style.display='none'});
    modal.addEventListener('click', (e)=>{ if(e.target===modal) modal.style.display='none';});

    /* -------- quick personalization helpers -------- */
    // EDIT ME: set her name dynamically if you want:
    // document.getElementById('herName').textContent = 'Aisha';
  </script>
